md-dialog(aria-label='Lightbox')
  md-toolbar
    div
      md-button.md-icon-button(close-lightbox ng-click='cancel()')
        ng-md-icon( icon="clear" ng-attr-style="fill: black" size="25")
    div
      h2(ng-if='title', ng-bind='title')
  md-dialog-content
   img(ng-src='{{image}}', style="height:100% !important;width:100% !important" alt='{{title}}')